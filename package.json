{
  "name": "pathogen",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:wu-json/pathogen.git",
  "author": "wu-json <jason.wu2153@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/mz": "^2.7.4",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@solana/web3.js": "^1.37.1",
    "borsh": "^0.7.0",
    "mz": "^2.7.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "pretty-quick --staged"
    ]
  },
  "scripts": {
    "start:client": "ts-node src/client/main.ts",
    "build:program-rust": "cargo build-bpf --manifest-path=./src/program-rust/Cargo.toml --bpf-out-dir=dist/program",
    "clean:program-rust": "cargo clean --manifest-path=./src/program-rust/Cargo.toml && rm -rf ./dist",
    "deploy:program-rust": "solana program deploy dist/program/pathogen.so",
    "prepare": "husky install"
  }
}
